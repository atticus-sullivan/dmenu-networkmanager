# Maintainer: Lukas Heindl <oss.heindl@protonmail.com>
pkgname=dmenu-networkmanager
pkgver=1.0.0
pkgrel=1
pkgdesc="Interact with networkmanager via dmenu"
arch=('x86_64')
url="https://github.com/atticus-sullivan/dmenu-networkmanager"
license=('MIT')
depends=("networkmanager")
provides=("dmenu-networkmanager")
conflicts=("dmenu-networkmanager-dev")
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/${pkgver}.tar.gz")
sha256sums=('SKIP')

package() {
	cd "${pkgname}-${pkgver}"
	install -Dm755 "dmenu-networkmanager.bash" "$pkgdir/usr/local/bin/dmenu-networkmanager"
}
